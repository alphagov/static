/* July 4 Homepage Styles
============================================================================ */

section#homepage {
  max-width: 960px;
  margin: 0 auto;
}

.lte-ie8 section#homepage {
  _width: 960px;
}


/* Homepage Header
============================================================================ */

section#homepage header {
  margin-left: 33.3333333%;
  padding-top: 3.75em;
}

section#homepage header h1 {
  font-size: 1.5em;
  line-height: 1.25em;
  font-weight: 300;
}

section#homepage header h1.strap {
  font-size: 3em;
  line-height: 1.0416666667;

  margin-bottom: .625em;
}

/* Homepage Search box
============================================================================ */

section#homepage .homepage-search {
  margin: 3.125em 0 0 33.3333333%;
  position: relative;
}

section#homepage .homepage-search .search-suggestions {
  font-size: 1.1875em;
  line-height: 1.25em;
  font-weight: 300;

  margin-bottom: .833333333em;
}

section#homepage .homepage-search .search-suggestions span {
  float: left;
  margin-right: 5px;
}

section#homepage .homepage-search .search-suggestions ul {
  list-style: none;
  margin: 0;
  padding: 0;
  height: 1.25em;
  display: block;
  float: left;
  overflow: hidden;
}

section#homepage .homepage-search .search-suggestions ul li a {
  color: #d53880;
  font-weight: 500;
  text-decoration: none;
}

section#homepage .homepage-search .search-suggestions:before {
  /* search arrow as generated content */
  content: " ";
  display: block;
  width: 124px; height: 133px;

  position: absolute;
  top: -16px; left: -130px;
  z-index: 99;

  background: transparent url(<%= asset_path "homepage-search-arrow.png" %>) no-repeat 0 50%;
}

section#homepage .homepage-search #main_autocomplete {
  margin: 0 .416666667em 0 0;
  max-width: 19.33em;
  width: 77%;
  font-size: 1.5em; line-height: 1.25em;
  position: relative;
  z-index: 0;
}

.lte-ie8 section#homepage .homepage-search #main_autocomplete {
  _width: 19.33em;
}

section#homepage .homepage-search .button.search {
  background-image: url(<%= asset_path "icon-search.png" %>);
  background-repeat: no-repeat;
  
  font-size: 1.42em;
}

section#homepage .homepage-search .button.search:hover {
  /* overwriting erreneous styles from search.css */
  border: none;
}

/* Sections
============================================================================ */

section#homepage .homepage-sections {
  margin-top: 5.3125em;
  padding-bottom: 5em;
}

section#homepage .homepage-sections h2 {
  font-size: 2.25em;
  font-weight: 300;

  margin: 0;
  width: 33.3333333%;
  float: left;
}

section#homepage .homepage-sections h2 a {
  color: #333;
  text-decoration: none;
  border-bottom: 1px solid #2e3191;
  padding-bottom: .111111111em;
}

section#homepage .homepage-sections h2 a:hover {
  color: #2e8aca;
  border-color: #2e8aca;
}

section#homepage .sections-list {
  list-style: none;
  margin: 0;
  padding: 0;
}

section#homepage .sections-list li {
  display: block;

  border-top: 1px solid #c1cacb;
  padding: 1.25em 0;
}

section#homepage .sections-links {
  font-size: 1.1875em;
  line-height: 1.315789474;
  margin-right: 1.5em;
}