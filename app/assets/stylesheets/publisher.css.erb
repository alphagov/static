/* guides pagination */

.pagination {
  background: #E1E8E8;
  display: block;
  margin: 2em -1.5em 0 -1.5em;
}

.pagination ul {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
  margin: 0;
  padding: 0;
}

.pagination li {
  float: left;
  font-size: 1em;
  list-style: none;
  margin: 0;
}

.pagination li:first-child {
  border-right: solid 0.5em #fff;
  text-align: right;
}

.pagination li a {
  background-image: url(<%= asset_path "pagination-arrows.png" %>);
  background-repeat: no-repeat;
  display: block;
  float: left;
  min-height: 4.5em;
  padding: 0.5em;
  text-decoration: none;
  width: 14.625em;
}

.pagination li a:hover {
  background-color: #97C5E5;
  color: #fff;
}

.pagination .previous a {
  background-position: -340px 50%;
/*  width: 10em;*/
}

.pagination .next a {
  background-position: 191px 50%;
/*  width: 19.25em;*/
}

.pagination .first {
  border-right: solid 0.5em #fff;
  float: left;
  min-height: 4.5em;
/*  width: 10em;*/
  padding: 0.5em;
  width: 14.625em;
}

.pagination .last {
/*  width: 15em;*/
  min-height: 4.5em;
  padding: 0.5em;
  width: 14.625em;
}

.pagination .pagination-label {
  display: block;
  font-size: 0.85em;
  line-height: 1em;
  margin-bottom: 0.5em;
}

.pagination li a .pagination-label {
  color: #000;
  display: block;
}

.pagination li a .pagination-part-title {
  text-decoration: underline;
}

