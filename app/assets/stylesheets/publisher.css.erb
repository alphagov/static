/* visited link colour overrides */

#wrapper.guide aside .chapters-navigation li a:visited,
#wrapper.guide .pagination li a:visited,
#wrapper.programme .article-container nav a:visited {
  color: #2E3191;
}

/* section pages */
#wrapper.section hgroup h1 {
  background-image: url(<%= asset_path "icon-section-l.png" %>);
}
#wrapper.section hgroup h1 span {
  color: #000;
}

/* Guides */
#wrapper.guide hgroup h1 {
  background-image: url(<%= asset_path "icon-guide-l.png" %>);
}
#wrapper.guide hgroup h1 span {
  color: #2F8ACA;
}
#wrapper.guide header {
  position: relative;
}
#wrapper.guide header hgroup {
  margin-left: 0;
}

.alternative-guide {
  position: absolute;
  top: 0;
  right: 1em;
  height: 7.5em;
  overflow: hidden;
  width: 9em;
}
.alternative-guide a span {
  background-image: url(<%= asset_path "icon-video.png" %>);
  background-position: 0 50%;
  background-repeat: no-repeat;
  display: block;
  float: right;
  font-size: 0.85em;
  line-height: 2em;
  padding-left: 2.25em;
}
.alternative-guide.video .video-wrapper {
  background: #000;
  float: right;
  height: 5em;
  overflow: hidden;
  text-align: center;
  width: 8.5em;
}
.alternative-guide.video img {
  margin-top: -0.5em;
}
.view-text-version {
  background: #ddd;
  border-top: solid 1px #bbb;
  margin-bottom: 1em;
  padding: 0.25em 1em;
}
.view-text-version p {
  font-size: 0.85em;
}

#wrapper.guide article {
  border-left: solid 1px #C9D0D0;
  margin-left: -1px;
  min-height: 40em;
  width: 75%;
}
.lte-ie8 #wrapper.guide article {
  width: 74.999%;
  float: left;
}
.guide article .inner {
  padding: 0.5em 2.5em 1em 2.5em;
}
#wrapper.guide aside {
  float: left;
  width: 25%;
}

#wrapper.guide aside .inner {
  padding: 0;
  width: 100%;
}
aside .chapters-navigation {
  display: block;
  float: right;
  margin-top: 0.5em;
  width: 95%;
}
aside .chapters-navigation ol {
  font-size: 0.85em;
  margin: 0;
  padding: 0;
}
aside .chapters-navigation li {
  list-style: none;
}
aside .chapters-navigation li a {
  background-color: #E1E8E8;
  border-top: solid 1px #C9D0D0;
  display: block;
  font-size: 1.2em;
  padding: 0.75em 0.75em;
  text-decoration: none;
}
aside .chapters-navigation li:first-child a {
  border-top: none;
}
aside .chapters-navigation li.active a {
  background: #fff;
  border: solid 1px #C9D0D0;
  border-right: none;
  display: block;
  margin-bottom: -1px;
  position: relative;
  z-index: 2;
}
aside .chapters-navigation li a:hover {
  background-color: #97C5E5;
  color: #fff;
}
aside .chapters-navigation li.active a:hover {
  background: #fff;
  color: #1576FB;
}
aside .chapters-navigation li a span {
  display: block;
}
aside .chapters-navigation li a .part-label {
  color: #3f3f3f;
  display: block;
  font-size: 0.75em;
  line-height: 1.5em;
  text-transform: uppercase;
}
aside .chapters-navigation li a:hover .part-label {
  color: #fff;
}
aside .chapters-navigation li.active a:hover .part-label {
  color: #1576FB;
}
aside .chapters-navigation li a .part-title {
  line-height: 1.3em;
}
aside .chapters-navigation li.active a .part-title {
  color: #000;
}

#wrapper.video-guide article {
  width: 100%;
}

.video-guide article .inner {
  padding-bottom: 2em;
}

.video-guide .meta-data {
  border-top: none;
  margin: 1em 0 2em 2em;
}

/* Transactions */
#wrapper.transaction hgroup h1 {
  background-image: url(<%= asset_path "icon-transaction-l.png" %>);
}
#wrapper.transaction hgroup h1 span {
  color: #c00;
}

/* Local Transactions */
#wrapper.local_transaction hgroup h1 {
  background-image: url(<%= asset_path "icon-localtransaction-l.png" %>);
}
#wrapper.local_transaction hgroup h1 span {
  color: #A93D00;
}

/* Programmes */
#wrapper.programme hgroup h1 {
  background-image: url(<%= asset_path "icon-programme-l.png" %>);
}
#wrapper.programme hgroup h1 span {
  color: #000;
}

/* Places */
#wrapper.place hgroup h1 {
  background-image: url(<%= asset_path "icon-transaction-l.png" %>);
}
#wrapper.place hgroup h1 span {
