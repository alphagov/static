/* Global header */

.beta-notice {
	display: none !important;
}

#global-header {
  background-color: rgba(0,0,0,0.8);
  -webkit-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  -moz-box-shadow: 0 0 5px rgba(0,0,0,0.3);
  box-shadow: 0 0 5px rgba(0,0,0,0.3);
  padding: 0.4em 0 0.4em 0;
}
.lte-ie8 #global-header {
  background-color: #0C0C0C;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 50;
}

#global-header .header-global {
  padding: 0 4%;
}

@media only screen and (min-width:670px) {
  .js-enabled #global-header {
    position: fixed;
    top: 0;
  }
  #global-header {
    width: 100%;
    z-index: 1000;
  }

}

.wf-gillsans-n4-inactive #global-header {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.wf-gillsans-n4-loading #global-header {
  font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
}
.wf-gillsans-n4-active #global-header {
  font-family: 'Gill Sans W01 Medium', sans-serif;
}
#global-header h1 {
  font-family: 'Gill Sans W01 Medium', sans-serif;
  font-size: 1.6em;
  font-weight: normal;
  float: left;
  letter-spacing: 0.05em;
  line-height: 1.15em;
  margin-right: 1.5em;
  text-transform: uppercase;
}

.lte-ie8 #global-header h1 {
  height: 1.25em;
}

#global-header h1 a {
  background-image: url(<%= asset_path "header-crown.png" %>);
  background-position: 0 0;
  background-repeat: no-repeat;
  float: left;
  padding: 0 0 0 1.7em;
}

#global-header .header-global a {
  color: #fff;
  text-decoration: none;
}

#global-header .header-global a:hover {
  text-decoration: underline;
}

#global-header ul {
  margin: 0;
  padding: 0;
}

#global-header ul li,
body.citizen nav.header-context ol li {
  float: left;
  list-style: none;
}

#global-header .header-global ul {
  float: left;
  margin-right: 0;
  line-height: 2em;
}

#global-header .header-global ul li {
  line-height: 1.75em;
  margin-right: 1.5em;
  margin-bottom: 0;
}

#global-header .header-global ul li:last-child {
  margin-right: 0;
}

#global-header .header-global ul li a {
  font-size: 0.85em;
  text-decoration: none;
}

#global-header .header-global ul li a:hover {
  color: #fff
}

body.citizen nav.header-context {
  background-color: #F2F2F2;
}

body.citizen nav.header-context ol {
  margin: 0 auto;
  max-width: 960px;
  padding: 3em 0 0.5em 0;
}
.lte-ie8 body.citizen .header-context ol {
  _padding: 0.25em 0;
  _width: 960px;
}

body.citizen nav.header-context ol li {
  background-image: url(<%= asset_path "section-divider-arrow.png" %>);
  background-position: 0.2em 30%;
  background-repeat: no-repeat;
  padding-left: 1.5em;
  margin-right: 0.5em;
}

body.citizen nav.header-context ol li:first-child {
  background: none;
  margin-left: 0.75em;
  padding-left: 0;
}

body.citizen nav.header-context a {
  white-space: nowrap;
}

body.citizen nav.header-context a:last-child {
  margin-right: 0
}

body.citizen nav.header-context .beta-notice {
  height: 0;
}

body.citizen nav.header-context .beta-notice .inner {
  margin: 0 auto;
  max-width: 960px;
  padding: 0;
  position: relative;
}

body.citizen nav.header-context .beta-notice p {
  background-color: #F17921;
  margin: 0;
  padding: 0.25em 0.5em;
  position: absolute;
  right: 15em;
  top: 2.65em;
}

body.citizen nav.header-context .beta-notice p a {
  color: #000;
  text-decoration: none;
}
body.citizen nav.header-context .beta-notice p a:hover {
  text-decoration: underline;
}

body.government #global-header .header-context {
  border-color: #cdce00;
  border-bottom-color: #9a9b00
}

body.government #global-header .header-context nav {
  font-weight: bold;
  text-decoration: none;
}

body.government #global-header .header-context nav a {
  color: #777;
}
body.government #global-header .header-context nav a:hover {
  color: #9a9b00
}

@media only screen and (min-width: 865px) {
  #global-header .header-context nav a.home,
  #global-header .header-context ol li.current-context {
    margin-right: 4%
  }
}

body.government #global-header .header-context {
  border-color: #cdce00;
  border-bottom-color: #9a9b00
}

@media only screen and (min-width: 600px) {
  body.government #global-header .header-context nav {
    width: 79.5%;
  }
}

form.site-search {
  margin-top: 0.15em;
}

form.site-search .button {
  /*
    new colour should be added to the palette
    this version is much more contrast-friendly than #2E8ACA
  */
  background-color: #4370CD;
  border-color: #4370CD;
  line-height: 1.25em;
  padding: 0.2em 0.5em;
}
form.site-search .button:hover {
  border-color: #9798C8;
}

form.site-search #site-search-text {
  border: none;
  border-bottom: solid 1px #fff;
  border-top: solid 1px #fff;
  line-height: 1.25em;
  padding: 0.2em 0.25em;
}

@media only screen and (min-width:670px) {
  .search-help {
    float: right;
  }

  body.government .header-context .search-help {
    border-color: #cdce00
  }
}
.lte-ie8 .search-help {
  float: right;
}

/* Global footer */

#footer .beta-notice {
  background: #F17921;
  color: #000;
  float: none;
  padding: 0.5em 4%;
  width: auto;
}

#footer .beta-notice p {
  display: inline-block;
  margin: 0 1em 0 0;
}

#footer .inner {
  padding: 1em 4%;
}

#footer a {
  color: #000;
}

#footer a:hover {
  text-decoration: none;
}

#footer .colophon-and-help {
  float: left;
  width: 35%;
}

#footer .help ul {
  margin: 0;
  padding: 0;
}

#footer .help ul li {
  display: inline;
  list-style: none;
  margin-right: 0.75em;
}

#footer .colophon {
  margin: 1.5em 0 0 0;
}

#footer .colophon p {
  font-size: 0.85em;
}

#footer .copyright {
  float: left;
  text-align: right;
  width: 65%;
}

#footer .copyright p {
  background-image: url(<%= asset_path "coat-of-arms.png" %>);
  background-position: 100% 0;
  background-repeat: no-repeat;
  color: #7F7F7F;
  margin: 0;
  padding: 7.25em 0 0 0;
}