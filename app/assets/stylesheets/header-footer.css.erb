/* Global footer */

#footer .beta-notice {
  background: #F17921;
  color: #000;
  float: none;
  width: auto;
  text-align:center;
}

#footer .beta-notice p {
  display: inline-block;
  margin: 0.7em auto;
  max-width:960px;
  text-align:left;
}

#footer .inner {
  padding: 1em 4%;
}


#footer .inner {
  margin: 0 auto;
  max-width: 960px;
/*width: 81%;*/
}


#footer .colophon-and-help {
  float: left;
  width: 50%;
}

#footer .help ul {
  margin: 0;
  padding: 0;
}

#footer .help ul li {
  display: inline;
  list-style: none;
  margin-right: 0.75em;
}

#footer .colophon {
  margin: 1.5em 0 0 0;
}

#footer .colophon p {
  font-size: 0.85em;
}

#footer .copyright {
  float: left;
  text-align: right;
  width: 38%;
}

#footer .copyright p {
  background-image: url(<%= asset_path "coat-of-arms.png" %>);
  background-position: 100% 0;
  background-repeat: no-repeat;
  color: #7F7F7F;
  margin: 4.3em 0 0 0;
  padding: 1em 4.5em 1em 0;
}



/* tour link */

.home-tour {
  position: fixed;
  top: 0.5em;
  right: 4%;
  z-index: 1000;
}

.tour-label a {
  background-color: #F17921;
  color: #000;
  padding: 0.25em 0.5em;
  text-decoration: none;
}
.tour-label a:hover {
  background-color: #fff;
}