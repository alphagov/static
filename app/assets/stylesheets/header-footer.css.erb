form.site-search {
  margin-top: 0.15em;
}

#global-header form.site-search {
  clear: both;
  position: relative;
  top: -1px;
}

form.site-search .button {
  background-color:#28A197;
  color:#fff;
  display:inline;
  font-weight:300;
  border:none;
  font-family: "NTA", "Helvetica Neue", Arial, Helvetica, sans-serif;
  padding: 0.35em 0.5em 0.15em;
  top: 0px;
  border-radius: 0;
  box-shadow: none;
}
form.site-search .button:hover {
  background-color: #3ABAA8;
}

form.site-search #site-search-text {
  font-weight:300;
  border: none;
  border-bottom: solid 1px #fff;
  border-top: solid 1px #fff;
  font-family: "NTA", "Helvetica Neue", Arial, Helvetica, sans-serif;
}


.search-help {
  float: right;
}

